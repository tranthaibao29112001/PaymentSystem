<div class="col-md-6 offset-md-3">
    <span class="anchor" id="formChangePassword"></span>
    <hr class="mb-5">

    <!-- form card change password -->
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0">Thông tin tài khoản</h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                    <label for="accoundID">Account ID:</label>
                    <input value="{{account_id}}" name="accoundID" type="number" class="form-control" id="accoundID" required="" disabled>
                </div>
                <div class="form-group">
                    <label for="currentBalance">Balance</label>
                    <div class="input-group">
                        <input value="{{balance}}" name="currentBalance" type="number" class="form-control" id="currentBalance" required="" disabled>
                        <div class="input-group-append">
                            <span class="input-group-text">$</span>
                        
                        </div>
                    </div>      
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg float-right">Xác nhận</button>
                </div>
        </div>
    </div>
    <!-- /form card change password -->
    {{#if msg}}
        <div class="alert alert-{{color}}" role="alert">
            {{msg}}
        </div>
    {{/if}}

</div>