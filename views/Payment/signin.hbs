<div class="container">
    <div class="card w-25 m-auto">
        <div class="card-body">
            <form method="post" action="./signin">
                <div class="form-group">
                    <label for="accountId">Tài khoản</label>
                    <input type="text" class="form-control" id="accountId" name="accountId" required="true">
                </div>
                <div class="form-group">
                    <label for="pwd">Mật khẩu</label>
                    <input type="password" class="form-control" id="pwd" name="pwd" required="true">
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-success">Đăng nhập</button>
                </div>
            </form>
            {{#if msg}}
            <div class="alert alert-{{color}}" role="alert">
                {{msg}}
            </div>
            {{/if}}
        </div>
    </div>
</div>