<div class="container">
    <div class="card w-25 m-auto">
        <div class="card-body">
            <form method="post" action="./createNewPwd">
                <div class="form-group">
                    <label for="username">Tài khoản</label>
                    <input type="text" class="form-control" id="username" name="username" readonly="true" value="{{username}}">
                </div>
                <div class="form-group">
                    <label for="pwd">Mật khẩu</label>
                    <input type="password" class="form-control" id="pwd" name="pwd" required="true">
                </div>
                <div class="form-group">
                    <label for="repwd">Nhập lại mật khẩu</label>
                    <input type="password" class="form-control" id="repwd" name="repwd" required="true">
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary">Tạo mật khẩu</button>
                </div>
            </form>
            {{#if msg}}
            <div class="alert alert-{{color}}" role="alert">
                {{msg}}
            </div>
            {{/if}}
        </div>
    </div>
</div>